                <span>@Model.characterData.IntellectMax</span>
            </div>
            <div class="col-md-6">
                <span style="font-weight:bold; font-size:25px;">Edge: </span>
                <span style="font-size:25px;">@Model.characterData.IntellectEdge</span>
            </div>
        </div>
        @*Intellect Skills*@
        <div class="row">
            <div class="col-md-12">
                @if (Model.intellectSkills.Count > 0)
                {
                    <ul class="list-group">
                        @foreach (var skill in Model.intellectSkills)
                        {
                            <li class="list-group-item">
                                @skill.Name <span style="font-style:italic">(@skill.Level)</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <span style="font-style:italic;">None</span>
                }
            </div>
        </div>
        <hr />
    </div>
</div>
